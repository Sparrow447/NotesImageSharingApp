@model NotesImageSharingApp.Models.Comment

@{
    ViewData["Title"] = "Create Comment";
}

<h1>Create Comment</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <input asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NoteId" class="control-label"></label>
        <input asp-for="NoteId" class="form-control" />
        <span asp-validation-for="NoteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageId" class="control-label"></label>
        <input asp-for="ImageId" class="form-control" />
        <span asp-validation-for="ImageId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
