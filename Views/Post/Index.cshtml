@model IEnumerable<NotesImageSharingApp.Models.PostViewModel>

<form asp-action="Create" asp-controller="Post" enctype="multipart/form-data">
    <div>
        <label for="Note">Note</label>
        <textarea name="Note" required></textarea>
    </div>
    <div>
        <label for="Image">Image</label>
        <input type="file" name="Image" />
    </div>
    <button type="submit">Submit</button>
</form>

<h3>Posts</h3>
@foreach (var post in Model)
{
    <div>
        <h2>Post ID: @post.PostId</h2> <!-- Updated to use PostId -->
        <p>Note: @post.Note.Content</p>
        <p>Image URL: @post.Image.FileName</p>
        <h3>Comments</h3>
        @foreach (var comment in post.Comments)
        {
            <div>
                <p>@comment.Author: @comment.Content</p>
                <p>@comment.CreatedDate</p>
            </div>
        }
    </div>
}